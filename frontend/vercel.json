{
  "version": 2,
  "name": "resumate-frontend",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",

  "env": {
    "VITE_API_BASE_URL": {
      "value": "https://resumate-backend.vercel.app/v1",
      "development": {
        "value": "http://localhost:8000/v1"
      }
    },
    "VITE_WS_BASE_URL": {
      "value": "wss://resumate-backend.vercel.app/ws",
      "development": {
        "value": "ws://localhost:8000/ws"
      }
    }
  },

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
