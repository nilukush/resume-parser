# Database
# Note: Port 5433 used to avoid conflict with native PostgreSQL on macOS
DATABASE_URL=postgresql+asyncpg://resumate_user:resumate_password@localhost:5433/resumate
DATABASE_URL_SYNC=postgresql://resumate_user:resumate_password@localhost:5433/resumate
USE_DATABASE=false  # Set to true to enable PostgreSQL storage (vs in-memory)

# Redis
REDIS_URL=redis://localhost:6379/0
USE_CELERY=false  # Set to true to enable Celery async processing

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Storage (S3-compatible)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=resumate-uploads

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Environment
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

# OCR Configuration
TESSERACT_PATH=/usr/local/bin/tesseract
ENABLE_OCR_FALLBACK=true
